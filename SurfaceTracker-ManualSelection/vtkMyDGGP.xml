<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <!-- ================================================================== -->
    <SourceProxy name="MyDijkstra" class="vtkMyDGGP" label="My Djikstra Graph Geodesic Path">
      <Documentation
         long_help="uses Dijkstra Path Geodesic Path to return shortest path between
         user selected points"
         short_help="Shortest path between string of points.">
      </Documentation>

      <InputProperty
         name="Input"
	       port_index="0"
         command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPolyData"/>
        </DataTypeDomain>
        <Documentation>
          Set the source data set.
        </Documentation>
      </InputProperty>

      <InputProperty
         name="Selection"
         port_index="1"
         command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkUnstructuredGrid"/>
        </DataTypeDomain>
        <Documentation>
          Set the extracted selection data set.
        </Documentation>
      </InputProperty>

      <IntVectorProperty
         name="LineType"
         command="SetLineType"
         number_of_elements="1"
         default_values="0" >
       <EnumerationDomain name="enum">
         <Entry value="0" text="Geodesic"/>
         <Entry value="1" text="Sulcus"/>
         <Entry value="2" text="Gyrus"/>
       </EnumerationDomain>
       <Documentation>
         This propery specifies which type of curvature to compute.
       </Documentation>
     </IntVectorProperty>



    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
